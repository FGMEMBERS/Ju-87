<!-- Junker Ju 87 Stuka - 2009 Emmanuel BARANGER

     source           : http://en.wikipedia.org/wiki/Junkers_Ju_87

     Junker ju87 Stuka

     wingspan         : 13.80 m      (     45 ft  3.30 in)
     Length           : 11.10 m      (     36 ft  1.07 in)
     height           :  4.23 m      (     13 ft 10.53 in)
     Speed            :   380 km/h   (    205 kts )
     Empty Weight     :  3205 kg     (  7,086 lb  )
     Ceiling          :  8200 m      ( 26,903 ft  )
     Engine           : Jumo Ju 211J (  V12 inv.  ) 2300 RPM - 1200 cv
-->

<airplane mass="7086">

  <approach speed="80" aoa="8">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
  </approach>

  <cruise speed="205" alt="22000">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.7"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.7"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.2"/>
    <control-setting axis="/controls/flight/flaps" value="0.0"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
  </cruise>

  <cockpit x="1.528" y="0" z="1.049"/>

  <fuselage ax="5.555" ay="0" az="0.245" bx="-5.575" by="0" bz="0.245" width="0.956" taper="0.5" midpoint="0.5"/>

  <wing x="1.018" y="0.470" z="-0.029"
        chord="3.195"
        length="6.360"
        taper="0.30"
        dihedral="5"
        camber="0.235">
        <stall aoa="14" width="4" peak="1.5"/>
        <flap0 start="0.032" end="0.438" lift="1.5" drag="1.2"/>
        <flap1 start="0.438" end="0.906" lift="1.2" drag="1.3"/>

        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-speed control="FLAP0" transition-time="5"/>

        <control-output control="FLAP0" prop="/surface-positions/flaps-pos-norm"/>

        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <hstab x="-4.999" y="0" z="0.737"
         chord="1.088"
         length="2.461"
         taper="1">
         <stall aoa="14" width="14" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.8" drag="1.8"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-4.610" y="0" z="0.460"
         chord="1.872"
         length="1.799"
         taper="0.70">
         <stall aoa="16" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.3" drag="1.2"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <!-- Engines   source            : http://fr.wikipedia.org/wiki/Junkers_Jumo_211

                 name              : Jumo Ju 211J
                 type              : liquid-cooled inverted-vee V12 engine
                 weight            : 1,290 lb (585 kg)
                 Displacement      : 2,135.2 in3 (34.99 l)
                 Compression       : 6.5:1
                 Propeller diameter: 3.4 m (11 ft 1.85 in)

                                          Rayon * Rayon * Mass(kg)   1.7 * 1.7 * 585
                 moment d'après la doc : ________________________ = ________________ = 563.55
                                                     3                      3
  -->
  <propeller   x="3.823" y="0" z="0.245"
               radius="1.7"
               mass="1290"
               moment="563.55"
               cruise-alt="22000"
               cruise-power="1000"
               cruise-speed="205"
               cruise-rpm="2100"
               min-rpm="583"
               max-rpm="2300"
               gear-ratio="0.645">
               <actionpt x="5" y="0" z="0.242"/>
               <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE" />
               <piston-engine eng-power="1200"
                              eng-rpm="2300"
                              displacement="2135.2"
                              compression="6.5">
                              <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
                              <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
                              <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
                              <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
               </piston-engine>
  </propeller>

  <gear x="2.644" y="1.636" z="-1.941"
        compression="0.2"
        retract-time="7">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="6.2"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>

  <gear x="2.644" y="-1.636" z="-1.941"
        compression="0.2" 
        retract-time="7">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="6"/>
        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

  <gear x="-4.619" y="0.0" z="-0.448"
        compression="0.2"
        retract-time="7">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0=".25" dst1="-.25"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="7"/>
        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
  </gear>

  <tank x="4.101" y="0" z="-0.355" capacity="884"/>
  <tank x="1.431" y="2.767" z="-0.355" capacity="559"/>
  <tank x="1.431" y="-2.767" z="-0.355" capacity="570"/>

  <!-- CG théorique x=1.302 y=0 z=-0.293 -->
  <ballast x="1.1" y="0" z="0" mass="1000"/>

</airplane>
