        <binding>
          <command>property-assign</command>
          <property>sim/multiplay/generic/float[11]</property>
          <value>1</value>
        </binding>
      </item>
      <item>
        <label>Guns mode 2</label>
        <binding>
          <command>property-assign</command>
          <property>/sim/model/guns</property>
          <value>2</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>sim/multiplay/generic/float[11]</property>
          <value>2</value>
        </binding>
      </item>
