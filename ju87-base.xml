<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <status>devel</status>
    <author>BARANGER Emmanuel</author>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <audible>true</audible>
      <path>Aircraft/Ju-87/Sounds/ju87-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Ju-87/Models/ju87.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Ju-87/Models/Effects/submodels.xml</path>
    </submodels>

    <startup>
      <splash-texture>Aircraft/Ju-87/ju87-splash.png</splash-texture>
    </startup>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">1</int>
      </generic>
    </multiplay>

    <help>
      <title>Junker Ju 87 Stuka</title>
      <key>
        <name>D</name>
        <desc>Open/Close bombs bay</desc>
      </key>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>Space</name>
        <desc>Guns fire</desc>
      </key>
      <key>
        <name>Ctrl e</name>
        <desc>Drop Torpedo</desc>
      </key>
    </help>

    <menubar include="Dialogs/ju87-menu.xml"/>

  </sim>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/ju87-keyboard.xml"/>
  </input>

  <nasal>
    <ju87>
      <file>Aircraft/Ju-87/Nasal/doors.nas</file>
      <file>Aircraft/Ju-87/Nasal/liveries.nas</file>
      <file>Aircraft/Ju-87/Nasal/light.nas</file>
    </ju87>
  </nasal>

</PropertyList>

