<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>intverriere</object-name>
    <object-name>intverriere2</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttour</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverrieretransp</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverrieretransp</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverrieretransp</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Ju-87/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.501 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.626 </z-m>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Ju-87/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.075 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.595 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopy</name>
    <object-name>intverriere2</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>intverrieretransp</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopy</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.7 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

